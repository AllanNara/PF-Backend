{
  "name": "pf-backend-course",
  "version": "2.0.0",
  "description": "E-commerce proyect for CoderHouse",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "cross-env NODE_ENV=production node server.js --dao mongo",
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "dev:mongo": "cross-env NODE_ENV=development nodemon server.js --dao mongo",
    "test": "cross-env NODE_ENV=test mocha test/**/*.spec.js",
    "cover": "c8 -o ./test/coverage --reporter=html --reporter=text npm test",
    "lint": "eslint \"*/**/*.{js, json}\" --fix",
    "lint:staged": "lint-staged",
    "prepare": "husky",
    "commitlint": "commitlint --edit",
    "commit": "cz",
    "version": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s --config .versionrc.json",
    "release": "commit-and-tag-version",
    "seed": "node src/seed",
    "oas:bundle": "scripts/generate-oa-docs.sh"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [],
  "author": "AllanNara",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "compression": "^1.7.5",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-handlebars": "^7.1.3",
    "express-routemap": "^1.6.0",
    "express-session": "^1.18.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.4.4",
    "mongoose-paginate-v2": "^1.8.2",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^5.0.7",
    "nodemailer": "^6.9.15",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "session-file-store": "^1.5.0",
    "socket.io": "^4.7.5",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.13.1",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/cz-commitlint": "^19.2.0",
    "@eslint/js": "^9.6.0",
    "@faker-js/faker": "^9.0.3",
    "@redocly/cli": "^1.18.0",
    "ajv": "^8.17.1",
    "c8": "^10.1.2",
    "chai": "^5.1.1",
    "chai-http": "^5.0.0",
    "commit-and-tag-version": "^12.4.1",
    "commitizen": "^4.3.0",
    "conventional-changelog-cli": "^5.0.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.6.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.6.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.7",
    "mocha": "^10.6.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.2"
  },
  "nodemonConfig": {
    "ext": "js, json, yaml, handlebars, html, css",
    "ignore": [
      "src/daos/**/*.json",
      "src/sessions/*.json"
    ]
  },
  "lint-staged": {
    "*.{js, json}": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
