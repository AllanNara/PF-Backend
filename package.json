{
  "name": "pf-backend-course",
  "version": "1.4.0",
  "description": "E-commerce proyect for CoderHouse",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "node .",
    "dev": "nodemon .",
    "mongo": "cross-env NODE_ENV=production nodemon .",
    "lint": "eslint \"*/**/*.{js, json}\" --fix",
    "lint:staged": "lint-staged",
    "prepare": "husky",
    "commitlint": "commitlint --edit",
    "commit": "cz",
    "version": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s --config .versionrc.json",
    "release": "commit-and-tag-version",
    "seeders": "node src/seeders",
    "oas:bundle": "scripts/generate-oa-docs.sh"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [],
  "author": "AllanNara",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-handlebars": "^7.1.3",
    "express-routemap": "^1.6.0",
    "husky": "^9.0.11",
    "mongoose": "^8.4.4",
    "mongoose-paginate-v2": "^1.8.2",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.7.5",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.13.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/cz-commitlint": "^19.2.0",
    "@eslint/js": "^9.6.0",
    "@redocly/cli": "^1.18.0",
    "commit-and-tag-version": "^12.4.1",
    "commitizen": "^4.3.0",
    "conventional-changelog-cli": "^5.0.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.6.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.6.0",
    "lint-staged": "^15.2.7",
    "mocha": "^10.6.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.2"
  },
  "nodemonConfig": {
    "ext": "js, json, yaml, handlebars, html, css",
    "ignore": [
      "src/dao/**/*.json"
    ]
  },
  "lint-staged": {
    "*.{js, json}": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
