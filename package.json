{
	"name": "pf-backend-course",
	"version": "1.2.1",
	"description": "E-commerce proyect for CoderHouse",
	"main": "src/app.js",
	"type": "module",
	"engines": {
		"node": ">=18.18.0"
	},
	"scripts": {
		"start": "node .",
		"dev": "nodemon .",
		"lint": "eslint \"*/**/*.{js, json}\" --fix",
		"lint:staged": "lint-staged",
		"prepare": "husky",
		"commitlint": "commitlint --edit",
		"commit": "cz",
		"version": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s --config .versionrc.json",
		"release": "commit-and-tag-version"
	},
	"keywords": [],
	"author": "AllanNara",
	"license": "MIT",
	"dependencies": {
		"express": "^4.19.2",
		"express-routemap": "^1.6.0",
		"husky": "^9.0.11"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.3.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@commitlint/cz-commitlint": "^19.2.0",
		"@eslint/js": "^9.6.0",
		"commit-and-tag-version": "^12.4.1",
		"commitizen": "^4.3.0",
		"conventional-changelog-cli": "^5.0.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^9.6.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"globals": "^15.6.0",
		"lint-staged": "^15.2.7",
		"prettier": "^3.3.2"
	},
	"lint-staged": {
		"*.{js, json}": "eslint --fix"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
