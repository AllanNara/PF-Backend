<div>
	<h2 class="mx-auto p-2">Productos en tiempo real!!</h2>
	<div id="products-list" style="width: 65%; margin-left: 30px"></div>

	 <form id="form-product" class="sidebar row g-3" enctype="multipart/form-data">
			<p class="h3">Agrega un nuevo producto:</p>
      <div class="col-6">
        <label for="category" class="form-label">Codigo de producto</label>
        <input type="text" class="form-control" id="code" name="code" />
      </div>
      <div class="col-6">
        <label for="category" class="form-label">Categoria</label>
        <input type="text" class="form-control" id="category" name="category" />
      </div>
      <div class="col-md-12">
        <label for="title" class="form-label">Nombre del producto</label>
        <input type="text" class="form-control" id="title" name="title" />
      </div>
      <div class="col-md-12">
        <label for="description" class="form-label">Descripci√≥n</label>
        <input type="text" class="form-control" id="description" name="description" />
      </div>
      <div class="col-6">
        <label for="price" class="form-label">Precio</label>
        <input type="number" step="0.01" class="form-control" id="price" name="price"/>
      </div>
      <div class="col-md-6">
        <label for="stock" class="form-label">Unidades disponibles</label>
        <input type="number" step="1" class="form-control" id="stock" name="stock"/>
      </div>
      <div class="col-md-12">
        <label for="thumbnails" class="form-label">Galeria (NOT AVAILABLE)</label>
        <input type="file" disabled="true" multiple accept="image/*" class="form-control" id="thumbnails" name="thumbnails"/>
      </div>
      <div class="col-12">
        <button type="submit" class="btn btn-primary">Agregar producto</button>
      </div>
    </form>

</div>

<div id="toasty-error" class="toast-container position-fixed top-0 start-0 p-3"></div>

<script src="/socket.io/socket.io.js"></script>
<script src="js/main.js"></script>
