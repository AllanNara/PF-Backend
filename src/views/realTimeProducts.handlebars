<div>
	<h2 class="mx-auto p-2">Productos en tiempo real!!</h2>
	<div id="products-list" style="width: 65%; margin-left: 30px"></div>

	 <form id="form-product" class="sidebar row g-3" enctype="multipart/form-data">
			<p class="h3">Agrega un nuevo producto:</p>
      <div class="col-md-6">
        <label for="title" class="form-label">Nombre del producto</label>
        <input type="text" class="form-control" id="title" />
      </div>
      <div class="col-6">
        <label for="category" class="form-label">Categoria</label>
        <input type="text" class="form-control" id="category" />
      </div>
      <div class="col-md-12">
        <label for="description" class="form-label">Descripci√≥n</label>
        <input type="text" class="form-control" id="description" />
      </div>
      <div class="col-6">
        <label for="price" class="form-label">Precio</label>
        <input type="number" class="form-control" id="price" />
      </div>
      <div class="col-md-6">
        <label for="stock" class="form-label">Unidades disponibles</label>
        <input type="number" class="form-control" id="stock" />
      </div>
      <div class="col-md-12">
        <label for="thumbnails" class="form-label">Galeria</label>
        <input type="file" multiple accept="image/*" class="form-control" id="thumbnails" />
      </div>
      <div class="col-12">
        <button type="submit" class="btn btn-primary">Agregar producto</button>
      </div>
    </form>

</div>

